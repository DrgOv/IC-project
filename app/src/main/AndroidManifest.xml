<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="proj.ezcolet">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ezcolet">
        <activity android:name=".views.admin.AdminHomeActivity"></activity>
        <activity android:name=".views.admin.AdminAddCourierActivity" />
        <activity
            android:name=".views.courier.CourierQrScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.courier.CourierInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.courier.CourierHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.client.ClientHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.entry.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.entry.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>