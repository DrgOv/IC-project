<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="proj.ezcolet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ezcolet">
        <activity android:name=".UserInfoActivity"></activity>
        <activity android:name=".CourierQrScanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CourierInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CourierActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".UserActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>