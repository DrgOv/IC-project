<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/crearecontTextView"
        android:layout_width="241dp"
        android:layout_height="110dp"
        android:text="Creare cont"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/stradaEditText"
        android:layout_width="314dp"
        android:layout_height="57dp"
        android:hint="Strada"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="265dp" />

    <EditText
        android:id="@+id/judetEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="Județ"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="354dp" />

    <EditText
        android:id="@+id/userEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="Username"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="521dp" />

    <EditText
        android:id="@+id/orasEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="Oraș"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="354dp" />

    <EditText
        android:id="@+id/parolaEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="Parola"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="521dp" />

    <EditText
        android:id="@+id/prenumeEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="Prenume"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="182dp" />

    <EditText
        android:id="@+id/numeEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="Nume"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="182dp" />

    <EditText
        android:id="@+id/codpostalEditText"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:hint="@ZIPcodeEditText"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gata"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="605dp" />

</androidx.constraintlayout.widget.ConstraintLayout>