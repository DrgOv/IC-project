<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- yellow rounded button -->
    <style name="yellowBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/yellow_grad_btn</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>
    <!-- round input -->
    <style name="roundedInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edit_text_states</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
    </style>
    <!-- heading -->
    <style name="largeHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/large_heading</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="mediumHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/medium_heading</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="smallHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_heading</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:gravity">center</item>
    </style>
</resources>