<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- yellow rounded button -->
    <style name="yellowBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/yellow_grad_btn</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
<!-- round input -->
    <style name="roundedInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edit_text_states</item>
        <item name="android:paddingStart">7.5dp</item>
        <item name="android:paddingEnd">7.5dp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>
<!-- heading -->
    <style name="largeHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">48sp</item>
        <item name="android:paddingTop">48dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>