<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_base_color_dark"
        android:paddingStart="@dimen/medium_spacing"
        android:paddingEnd="@dimen/medium_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courierOrderNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/upperTextCardView"
                    android:textSize="@dimen/small_heading" />

                <TextView
                    android:id="@+id/courierOrderDetailsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="@string/LowerTextCardView"
                    android:textColor="@color/primary_accent_color"
                    android:paddingStart="5dp"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/checkBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                app:srcCompat="@drawable/ic_baseline_done_24" />

            <ImageButton
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                app:srcCompat="@drawable/ic_baseline_clear_24" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>