<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x_small_spacing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#292929"
        android:paddingStart="@dimen/medium_spacing"
        android:paddingEnd="@dimen/medium_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_card1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingStart="@dimen/medium_spacing"
                    android:paddingEnd="@dimen/medium_spacing"
                    android:text="@string/upperTextCardView"
                    android:textSize="@dimen/small_heading" />

                <TextView
                    android:id="@+id/text_view_card2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingStart="@dimen/medium_spacing"
                    android:paddingEnd="@dimen/medium_spacing"
                    android:text="@string/LowerTextCardView"
                    android:textColor="@color/primary_accent_color" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/checkButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:background="@null"
                app:srcCompat="@drawable/ic_delivery" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>